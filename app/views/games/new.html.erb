<div class="container m-3">
  <h1>New game</h1>
  <%= @letters %>
  <div class="d-flex">
    <% @letters.each do |letter| %>
      <div class="card bg-primary mx-2 w-25 text-center align-middle">
        <p class=""><%= letter %></p>
      </div>
    <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <p>What is the longest world you can find?</p>
    <input type="text" class="" name="input" id="">
    <input type="submit" value="Play">
  </form>
</div>
